/* pages/wuLiu/wuLiu.wxss */
.top{
  width:100%;
  padding:23px 10px;
  background: #FF7054;
  display: flex;
}
.top image{
  width:81px;
  height:81px;
  margin-right:15px;
  background: #abcdef;
}
.top .right{
  padding-top:15px;
}
.top .company{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-top:10px;
}
.company:nth-child(1){
  margin-top:0;
}
.company text{
  padding:0 12px;
  height:21px;
  border-radius:5px;
  border:1px solid rgba(255,255,255,1);
  margin-left:24px;
}
.title{
  display: flex;
  justify-items: center;
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(113,113,113,1);
  margin-top:30px;
  margin-left:10px;
}
.box{
  width:2px;
  height:18px;
  background: linear-gradient(to bottom,#FF5853,#FF8854);
  margin-right:8px;
}