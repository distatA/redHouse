.sort{
  display: flex;
  justify-content: space-between;
  margin: 8px;
  margin-bottom: 0;
  padding:8px 25px 12px 15px;
  box-sizing: border-box;
  border-bottom:1px solid #F2F2F2;
  background: #fff;
  align-items: flex-end;
}
.sort .left{
  display: flex;
  align-items: center;
}
.sort .left .num{
  font-size:16px;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-right:10px;
}
.sort .left .nickName{
  /* width:109rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; */
  font-size:14px;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-left:10rpx;
}
.headUrl{
  width:40px;
  height:40px;
  position: relative;
}
.sort .right{
  flex-direction: column;
  height:40px;
}
.sort .right image{
  width:20px;
  height:22px;
}
.focusNum{
  font-size:12px;
  font-weight:400;
  color:rgba(132,132,132,1);
  text-align: center;
}
.bottoms{
  display: flex;
  align-items: baseline;
  /* width:100%; */
  margin:0 8px 8px 8px;
  /* margin-top:5px; */
  padding:8px 25px 12px 15px;
  box-sizing: border-box;
  border-top:1px solid #F2F2F2;
  background: #fff;
}
.bottoms .left image{
  width:46rpx;
  height:20rpx;
}
.bottoms .text{
  margin-left:10rpx;
  font-size: 14px;
  color:rgb(113,113,113);
  text-align: left;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.bottoms .link{
  margin-top:15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: rgb(255, 109, 83);
  width:600rpx;
}
.bottoms .link text{
  width:280px;
  text-align: left;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: block;
  margin-left: 20rpx;
  font-size: 14px;
}
.bottoms .link .lefts{
  display: flex;
  align-items: center;
}