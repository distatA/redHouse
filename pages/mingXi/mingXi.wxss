/* pages/mingXi/mingXi.wxss */
.content{
  height: 100vh;
  background-color: #FAFAFA;
}
van-picker{
   position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:300px;
}
.head{
  padding:10px 20px;
  background: #FAFAFA;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head .left{
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(104,104,104,1);
}
input{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(104,104,104,1);
}
.head image{
  width:16rpx;
  height:12rpx;

}
.list{
  padding:10px 20px;
  border-bottom: 1px solid #F2F2F2;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.title{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.time{
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(173,173,173,1);
  margin-top:3px;
}
.right{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,146,84,1);
}
.rights{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(174,174,174,1);
}
.sum{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(173,173,173,1);
  padding:7px 20px;
  background: #FAFAFA;
}
picker-view{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:300px;
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgb(121, 120, 120);
  background: #fff;
}
picker-view-column{
  text-align: center
}