  color:rgba(255,146,84,1);
  text-align: right;
  padding-right:20px;
}
input{
  text-align: right;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(154,154,154,1);
}
.foot{
  width:100px;
  height:30px;
  background: linear-gradient(to right,#FF9254,#FF5053);
  text-align: center;
  line-height: 30px;
  border-radius: 30px;
  margin:0 auto;
  margin-top:140px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}