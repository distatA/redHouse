/* pages/myWindow/myWindow.wxss */
.box {
	width:100%;
	height:100%;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
} 
.header{
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:10px 10px 10px 20px;
  box-sizing: border-box;
  color: #000000;
  border-radius:5px;
  width:355px;
  margin:0 auto;
  margin-top:-40px;
}
.header image{
  width:65px;
  height:65px;
  border-radius: 50%;
  /* background: #abcdef; */
}
.header .left{
  display: flex;
  align-items: center;
}
.header .right{
  font-size:16px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:550;
  color:#000;
  margin-left:20px;
}
/* 会员绑定 */
.title{
  display: flex;
  padding:20px 15px 17px 20px;
  align-items: center;
  justify-content: space-between;
}
.title .left{
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:550;
  color:#000;
}
.title .right{
  font-size:10px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,0,0,1);
}
/* 列表 */
.list{
  padding:15px 20px;
  box-sizing: border-box;
  border-bottom:1px solid #F2F2F2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .left{
  display: flex;
  /* align-items: center; */
}
.list .left .headImg{
  width:45px;
  height:45px;
  position: relative;
  /* background: #abcdef; */
}
.list .left .headImg image{
  width:45px;
  height:45px;
  border-radius: 50%;
}
.list .name{
  font-size:16px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(22,22,22,1);
}
.nickNames{
  width:160px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.city{
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(114,114,114,1);
  margin-top:3px;
}
.time{
  font-size:10px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(114,114,114,1);
  margin-top:3px;
}
.list .right{
  width:60px;
  height:25px;
  border-radius:5px;
  border:1px solid #E17C65;
  text-align: center;
  line-height: 25px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#E17C65;
}
.list .rights{
  width:60px;
  height:25px;
  border-radius:5px;
  background: #E1DFE0;
  text-align: center;
  line-height: 25px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#fff;
}