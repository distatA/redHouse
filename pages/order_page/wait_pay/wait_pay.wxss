/* pages/order_page/wait_pay/wait_pay.wxss */
.wait{background: #fafafa;padding-bottom: 16rpx;}
.waitTop{background: #FF7054;padding: 50rpx 40rpx;display: flex;justify-content: space-between;}
.t1{font-size: 36rpx;color: #fff;}
.time{color: #fff;font-size: 28rpx;display: flex;margin-top: 12rpx;}
.topPic image{ width: 130rpx;height: 130rpx; }
.address{padding: 40rpx;background: #fff;margin-bottom: 16rpx;}
.addressTop{display: flex;align-items: baseline;}
.name{font-size: 32rpx;}
.tell{font-size: 24rpx;color: rgb(154, 154, 154);margin-left: 24rpx;}
.detailAddress{margin-top: 20rpx;font-size: 26rpx;color: rgb(102, 102, 102);}
.orderBtns{display: flex;flex-direction: row-reverse;}
.orderbtn{width: 150rpx;height: 50rpx;line-height: 50rpx;text-align: center;font-size: 24rpx;border-radius: 10rpx;border: 2rpx solid #dddddd;}
.btn2{margin-left: 30rpx;color: #ff5053;border: 2rpx solid #ff5053;}
.goodDetail{background: #fff;margin-bottom: 16rpx;}
.goodTop{padding: 16rpx 40rpx;display: flex;align-items: center;}
.headImg image{width: 52rpx;height: 52rpx;}
.headName{font-size: 28rpx;color: rgb(113, 113, 113);margin-left: 16rpx;}
.lv image{width: 24rpx;height: 20rpx;position: relative;top: -20rpx;}
.arrow{width: 10rpx;height: 10rpx;border-bottom: 3rpx solid #9f9f9f;border-left: 3rpx solid #9f9f9f;transform: rotate(-135deg);}
.orderNo{margin: 0 20rpx;padding: 0 20rpx 14rpx;font-size: 22rpx;color: #c3c3c3;border-bottom: 2rpx solid #fafafa;}
.goodUl{margin: 0 20rpx;padding: 20rpx 0;border-top: 2rpx solid #fafafa;}
.goodLi{padding: 0 20rpx;display: flex;}
.goodPic image{width: 160rpx;height: 160rpx;}
.goodTxt{margin-left: 20rpx;width: 480rpx;padding-top: 10rpx;}
.txtLeft{
  font-size: 24rpx;
  color: rgb(113, 113, 113);
  width: 340rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.goodTxtTop{display: flex;justify-content: space-between;}
.price{text-align: right;}
.thisPrice{font-size: 24rpx;}
.quantity{font-size: 24rpx;color: rgb(159, 159, 159);}
.guige{margin-top: 26rpx;font-size: 24rpx;color: rgb(191, 191, 191);}

.orderMsg{padding: 24rpx 20rpx;background: #fff;}
.orderTopTxt{font-size: 28rpx;color: rgb(113, 113, 113);padding-left: 16rpx;border-left: 4rpx solid #ff6153;}
.orderTop{padding-bottom: 20rpx;border-bottom: 2rpx solid #fafafa;}
.orderBd{padding: 0 20rpx;margin-top: 14rpx;}
.orderli{display: flex;justify-content: space-between;font-size: 24rpx;color: rgb(113, 113, 113);margin-bottom: 20rpx;}
.nowPrice{
  font-size:12px;
font-family:PingFangSC;
font-weight:400;
color:rgba(113,113,113,1);
margin-left:21px;
display: flex;
align-items: center;
width:200px;
}
.nowPrice text{
  font-size:14px;
font-family:PingFangSC;
font-weight:400;
color:rgba(255,80,83,1);
}
.eleTicket{font-size: 24rpx;color: #717171;padding: 15rpx 40rpx;background: #fff;margin: 16rpx 0;}
.ticketli{padding: 15rpx 0;}

.importantMsg{background: #fff;padding: 15rpx 40rpx;font-size: 24rpx;color: #717171;margin-bottom: 120rpx;}
.orderNumber{display: flex;justify-content: space-between;align-items: center;}
.copyBtn{width: 90rpx;height: 44rpx;font-size: 24rpx;line-height: 44rpx;text-align: center;border: 2rpx solid #dddddd;border-radius: 10rpx;}
.improtLi{padding: 15rpx 0;}

.allBtns{width: 750rpx;height: 120rpx;position: fixed;bottom: 0;right: 0;background: #fff;display: flex;align-items: center;padding-right:20px;box-sizing: border-box;justify-content: space-between}
.lastBtn{font-size: 24rpx;width: 150rpx;height: 50rpx;border: 2rpx solid #827f7f;text-align: center;border-radius: 50rpx;line-height: 50rpx;}
.concelBtn{margin-right:10px;}
.payNowBtn{color: #ff6c6e;border: 2rpx solid #ff6c6e;}
.phone{
  width:100px;
  margin:10px auto;
  display: flex;
  align-items: center;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(130,127,127,1);
}
.phone image{
  width:24px;
  height:24px;
  margin-right:10px;
}