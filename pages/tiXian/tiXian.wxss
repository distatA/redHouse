/* pages/tiXian/tiXian.wxss */
.head{
  padding:20px 40px;
  display: flex;
  align-items: center;
  background: #FAFAFA;
  font-size: 18px;
  color:#000;
  font-weight: 500;
}
.head image{
  width:26px;
  height:21px;
  margin-left:13px;
  margin-right:11px;
}
.title{
  margin-top:24px;
  margin-left:40px;
  font-size: 16px;
  color:#717171;
  font-weight: 400;
}
.money{
  padding:11px 0px;
  margin:0 40px;
  border-bottom:1px solid #F2F2F2;
  display: flex;
  align-items: center;
}
.money text{
  font-size: 24px;
  color:#000;
  font-weight: 500;
}
input{
  font-size: 16px;
  color:#000;
  font-weight: 400;
  padding-left:11px;
}
.foot{
  padding:32px 40px;
}
.tip{
  font-size: 14px;
  color:#FF9254;
}
.list{
  font-size: 14px;
  color:#AEAEAE;
  margin-top:5px;
}
.tijiao{
  width:100px;
  height:30px;
  border-radius:5px;
  background: linear-gradient(to right,#FF9254,#FF5053);
  text-align: center;
  line-height: 30px;
  margin:0 auto;
  margin-top:100px;
  font-size:14px;
  font-weight:400;
  color:rgba(255,255,255,1);
}