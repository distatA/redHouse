/* pages/backOrderStatus/backOrderStatus.wxss */
.head{
  margin:16px 20px;
  display: flex;
  /* align-items: center; */
  font-size:16px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(22,22,22,1);
}
.head image{
  width:30px;
  height:30px;
  margin-right:16px;
}
.price{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(22,22,22,1);
  /* margin-left:20px; */
  margin-bottom:20px;
}
.price text{
  color:#FF575A;
}
.text{
  padding:0px 10px 10px 20px;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,87,90,1);
}
.shop_name{
  width:180px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.tips{
  padding:10px 10px 10px 20px;
  box-sizing: border-box;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(192,192,192,1);
  background:rgba(250,250,250,1);
}
/* 商品 */
.shop{
  padding:14px 20px;
  display: flex;
  justify-content: space-between;
  border-top:5px solid #FAFAFA;
  border-bottom:5px solid #FAFAFA;
}
.shop image{
  width:80px;
  height:80px;
  /* background: #abcdef; */
}
.shopName{
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(113,113,113,1);
}
.shopsName{
  width:180px;
  margin-right:20px;
  
}
.shopsName .left{
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3;
overflow: hidden;
}
.shopPrice{
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(12,12,12,1);
}
.list{
  padding:11px 20px;
  border-bottom:1px solid #F5F5F5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(113,113,113,1);
  margin-top:10px;
}
.list .left{
  display: flex;
  align-items: center;
}
.list .detail{
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.imgs{
  width:80px;
  height:80px;
  /* background: #abcdef; */
}
.list .left image{
  width:26px;
  height:26px;
  border-radius: 50%;
 /* background: #abcdef; */
 margin-left:15px;
 margin-right:8px;
}
.list .right{
  width:250px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .rights image{
  width:18px;
  height:16px;
}
.foot{
   margin:0 auto;
   width:200px;
  margin-top:39px;
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,146,84,1);
  padding-bottom:50px;
}
.foot image{
  width:20px;
  height:20px;
  margin-right:20px;
}
.pingTai{
  position: fixed;
  right:126px;
  bottom:15px;
  padding:3px 13px;
  border:1px solid #FF7054;
  border-radius: 20px;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:#FF7054;
}
.backout{
  position: fixed;
  right:26px;
  bottom:15px;
  padding:3px 13px;
  border:1px solid #BFBFBF;
  border-radius: 20px;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(130,127,127,1);
}