/* pages/applyOrderDetail/applyOrderDetail.wxss */
page{
  padding-bottom:50px;
}
.head{
  padding:8px 20px;
}
.head .title{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(22,22,22,1);
  margin-bottom:6px;
}
.head .shop{
  display: flex;
}
.shop image{
  width:81px;
  height:81px;
  /* background: #abcdef; */
}
.shop .right{
  margin-left:12px;
}
.shop .right .top{
  display: flex;
  align-items: center;
}
.right .top .shopName{
  width:176px;
 display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3;
overflow: hidden;
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(113,113,113,1);
}
.top .price{
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(12,12,12,1);
  margin-left:24px;
}
.price .num{
  color:rgba(159,159,159,1);
  text-align: right;
}
.size{
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(191,191,191,1);
  margin-top:12px;
}
.box{
  width:100%;
  height:15px;
  background: #FAFAFA;
}
/* list */
.list{
  padding:14px 20px;
  border-bottom:1px solid #F5F5F5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list .left{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(22,22,22,1);
}
.list .right{
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(113,113,113,1);
}
/* 说明 */
.main{
  position: relative;
  /* padding:10px 20px 0px 10px; */
}
.explain{
  padding:12px 20px;
  background: #FAFAFA;
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(22,22,22,1);
}
textarea{
margin:50rpx 40rpx;
font-size:14px;
}
.nums{
  position: absolute;
  right:30px;
  bottom:0px;
  font-size:12px;
font-family:PingFangSC;
font-weight:400;
color:rgba(113,113,113,1);
}
/* img */
.li{
  display: flex;
  justify-content: space-around;
padding:10px 20px 0px 10px;
}
.img {
  width:106px;
  height:106px;
  border-radius: 6px;
  padding:20px;
  box-sizing: border-box;
  background: #EEEEEE;
}
.img image{
  width:66px;
  height:66px;
}
.tijiao{
  width:100px;
  text-align: center;
  height:30px;
  line-height: 30px;
  border-radius: 4px;
  margin:15px auto;
  background: linear-gradient(to right,#FF9254,#FF5053);
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
input{
  text-align: right;
}