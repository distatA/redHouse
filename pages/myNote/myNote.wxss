/* pages/myNote/myNote.wxss */
.titles{
  font-size:15px;
  font-weight:400;
  color:rgba(0,0,0,1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.noteImg{
  display: flex;
  justify-content: space-between;
  margin-top:10px;
  flex-wrap:wrap;
}
.noteImg image{
  margin-bottom:8rpx;
  margin-right:6rpx;
}
.boxSon{
  position: absolute;
  width:100%;
  /* height:88rpx; */
  bottom:0;
  left:0;
  padding:8rpx;
  box-sizing: border-box;
  background:rgba(95,95,95,0.59);
  border-radius:0px 0px 10rpx 10rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 23px;
}
.bottom{
  padding:14px 19px 6px 30px;
 
}
 .time{
  font-size:14px;
  font-weight:400;
  color:#484848;
  margin:9px 0px 0px 10px;
}

.read{
  display: flex;
  justify-content: space-between;
}
.li{
  display: flex;
  align-items: center;
  font-size:14px;
  font-weight:400;
  color:#484848;
  margin-right:20px;
}
.article{
  display: flex;
  justify-content: space-between;
  padding:10px 10px 10px 12px;
  /* margin-top:8px; */
}
.main{
  padding:10px 10px 10px 12px;
}
/* 商品链接 */
.link{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: rgb(255, 109, 83);
  margin-top:15rpx;
  padding:0 20px 0 10px;
}
.link text{
  margin-left: 20rpx;
  white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
}
.article .left{
  font-size:14px;
  font-weight:400;
  color:rgba(0,0,0,1);
  width:65%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.lefts{
  width:100%;
  display: flex;
  align-items: center;
}
.boxFei{
  position: absolute;
  right:0;
  top:0;
  width:120rpx;
  height:60rpx;
  background: rgb(255, 109, 83);
  border-radius: 12rpx;
  text-align: center;
  line-height: 60rpx;
  color:#fff;
  font-size: 14px;
}
/* 投票 */
.vote{
  padding:7px 10px;
  background:rgba(197,197,197,0.14);
  border-radius:2px;
}
.vote-top{
  border-bottom:1px solid #C5C5C5;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,109,83,1);
  padding-bottom:4px;
}
.vote-title{
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(94,94,94,1);
  margin-top:5px;
}
.vote-list{
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  padding:0 15px;
  height:30px;
  line-height: 30px;
  box-sizing: border-box;
  width:100%;
  margin-top:5px;
  background: #fff;
  border-radius:5px;
  border:1px solid rgba(237,237,237,1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.vote-list .left{
  width:90%;
  border-radius:5px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.vote-list .right{
  width:10%;
  text-align: center;
}
.vote-time{
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(94,94,94,1);
  margin-top:5px;
}
/* 图片 */
.voteImg{
  display: flex;
  justify-content: space-between;
  margin:15px 0;
}
.img-items{
  width:155px;
  height:120px;
  position: relative;
}
.voteBox{
  position: absolute;
  bottom:0;
  left:0;
  width:100%;
  height:20px;
  line-height: 20px;
  text-align: center;
  background:rgba(95,95,95,0.59);
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.vote-piao{
  width:60px;
  height:25px;
  border-radius:5px;
  border:1px solid rgba(255,109,83,1);
  text-align: center;
  line-height: 25px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,109,83,1);
  margin:0 auto;
  margin-top:12px;
}
.vote-tiao{
  width:100%;
  height:28px;
  background: #E7E7E8;
  border-radius:4px;
  display: flex;
}
.tiao-left{
  width:50%;
  height:28px;
  line-height: 28px;
  background:rgba(255,232,229,1);
  border-radius:4px 0px 0px 4px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,109,83,1);
  text-align: left;
  padding-left:5px;
}
.tiao-right{
  width:50%;
  background:rgba(110,212,0,0.3);
  height:28px;
  line-height: 28px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(26,170,0,1);
  text-align: right;
  padding-right:5px;
}