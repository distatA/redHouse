/* pages/submitOrder/submitOrder.wxss */
.top{
  width:100%;
  height:197px;
  background: #FF7054;
  padding-top:20px;
  box-sizing: border-box;
}
button[type=warn] {

background-color: #FF7054 !important;
}

.top .img{
  width:108rpx;
  height:90rpx;
  margin:0 auto;
}
.top .img image{
  width:100%;
  height:100%;
}
.succeed{
  font-size:14px;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:20px;
  margin-top:7px;
  text-align: center;
}
.time{
  font-size:12px;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:17px;
  text-align: center;
  margin-top:7px;
}
.price{
  font-size:16px;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:22px;
  text-align: center;
  margin-top:22px;
}
/* 支付方式 */
.main{
  padding:20px;
}
.main .title{
  font-size:16px;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:22px;
}
.list{
  padding-right:18px;
  padding-bottom:7px;
  border-bottom:1px solid #F2F2F2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:24px;
}
.left{
  display: flex;
  align-items: center;
}
.left image{
  width:18px;
  height:21px;
  margin-right:20px;
}
.balance{
  font-size:16px;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.usable{
  font-size:14px;
  font-weight:400;
  color:rgba(164,164,164,1);
  margin-top:6px;
}
.right image{
  width:10px;
  height:17px;
}
/* 弹框 */
.pop-up{
  position: fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background:rgba(216,216,216,0.4);
}
.box{
  position: absolute;
  width:314px;
  height:348px;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  background: #fff;
  padding:13px 25px 18px 24px;
  box-sizing: border-box;
  border-radius:5px;
}
/* 关闭 */
.close{
  position: absolute;
  top:17px;
  right:21px;
}
.close image{
  width:13px;
  height:13px;
  display: block;
}
.box-top{
  font-size:16px;
  text-align: center;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:22px;
}
.box-title{
  font-size:16px;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:22px;
  text-align: left;
  margin-top:32px;
}
/* 密码 */
.content{
  /* width: 660rpx; */
  /* padding:0 45rpx; */
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 25px;
  box-sizing: border-box;
}
.iptbox{
  width: 45px;
  height: 45px;
  border:1px solid #ddd;
  border-right:none;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.iptbox:nth-child(6){
  border-right:1px solid #ddd;
}
.ipt{
  width: 0;
  height: 0;
}
.btn-area{
  width: 100px;
 
  margin-top: 30px;
  font-size:14px;
  font-weight:400;
  color:rgba(255,255,255,1);
 
}
/* 忘记密码 */
.forget{
  font-size:12px;
  font-weight:400;
  color:rgba(163,163,163,1);
  line-height:17px;
  text-align: right;
}
.box-price{
  font-size:14px;
  font-weight:400;
  color:rgba(0,0,0,1);
  text-align: center;
  margin-top:15px;
}
.box-price text{
  font-size:20px;
  font-weight:400;
  color:rgba(255,146,84,1);
}