/* pages/home_page/address/address.wxss */
.tip{
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,0,0,1);
  margin:10px 12px 0px 20px;
}
.address{background: #fafafa;height: 100%;}
.addressLi{padding: 40rpx;background: #fff;margin-bottom: 10rpx;}
.addressInfo{margin-bottom: 20rpx;}
.addressInfo .top .realName{font-size: 32rpx;display: inline-block;}
.addressInfo .top .tell{font-size: 24rpx;display: inline-block;color: rgb(154, 154, 154);margin-left: 30rpx;}
.addressInfo .top .moren{font-size: 28rpx;display: inline-block;background: #ffe9dd;color: #ff5c53;padding: 4rpx 6rpx;margin-left: 20rpx;}
.addressInfo .top .addressName{font-size: 28rpx;display: inline-block;padding: 4rpx 6rpx;background: #ebebeb;color: #9e9e9e;margin-left: 8rpx;}
.particular{font-size: 26rpx;color: rgb(104, 104, 104);margin-top: 20rpx;line-height: 36rpx;}

.edit{display: flex;font-size: 28rpx;padding-top: 20rpx;border-top: 2px solid #f2f2f2;}
.morenChoice>.choiceBtnimg{width: 32rpx;height: 32rpx;background: url(https://firsthouse.oss-cn-shanghai.aliyuncs.com/images/personal/help/unchoice.png) center/32rpx 32rpx;}
.morenChoice>.choiceBtnimg.on{background: url(https://firsthouse.oss-cn-shanghai.aliyuncs.com/images/personal/help/choice.png) center/32rpx 32rpx;}
.morenTxt{display: inline-block;margin-left: 14rpx;font-size: 28rpx;}
.morenChoice{display: flex;align-items: center;width: 180rpx;}

.tempbtn{display: flex;align-items: center;}
.tempbtn>image{width: 32rpx;height: 32rpx;}
.bianji .bianjiTxt{display: inline-block;margin-left: 10rpx;}
.delete .deleteTxt{display: inline-block;margin-left: 10rpx;}
.bianji{margin-left: 240rpx;}
.delete{margin-left: 40rpx;}

.addTxtBtn{width: 200rpx;height: 60rpx;line-height: 60rpx;color: #fff;background: linear-gradient(to top right,#FF7054,#ff6453,#ff5053);font-size: 30rpx;text-align: center;
/* position: fixed;bottom: 80rpx;left: 90rpx; */
border-radius: 10rpx;
}
.addTxtBtns{
  width:110px;
  height:30px;
  /* position: fixed;
  bottom: 80rpx;
  right: 120rpx; */
}
.addTxtBtns image{
  width:100%;
  height:100%;
}
.foot{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20px;
}



