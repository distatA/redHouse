.rzTxt{font-size: 32rpx;color: rgb(22, 22, 22);margin-left: 12rpx;}
.choose{display: none;}
.status{
  font-size:12px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,112,84,1);
}
.tags{width: 40rpx;height: 40rpx;background: url(https://firsthouse.oss-cn-shanghai.aliyuncs.com/images/personal/certificate/unfocus.png) center/40rpx 40rpx;
