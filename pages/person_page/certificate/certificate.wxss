.spLi>image{width: 60rpx;height: 60rpx;}
.spliContent{margin-left: 30rpx;}
.mainTitle{font-size: 28rpx;}
.detail{font-size: 24rpx;color: rgb(114, 114, 114);margin-top: 16rpx;}
.lastBtn{padding: 90rpx 0 120rpx;}
