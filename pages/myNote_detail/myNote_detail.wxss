}
.user image{
  width:290px;
  height:40px;
  position: relative;
  margin:0 auto;
  display:block;
}
button::after {
  border: none;
}
button[plain]{
  border:0;
}
.btn-set{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
}
button{
  padding:0;
}
.main{
  padding:10px;
  overflow-x: hidden;
}
.title{
  font-size:16px;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:22px;
}
.biaoti{
  font-size: 16px;
  text-align: center;
  margin-bottom: 10px;
}
.time{
  font-size:12px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#484848;
  line-height:17px;
}
.money{
  font-size:16px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:550;
