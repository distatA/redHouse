  height:15px;
}
/* 留言列表 */
.message{
  display: flex;
  justify-content: space-between;
  margin-top:27px;
  border-bottom:2px solid #F2F2F2;
  padding-bottom:17px;
  padding-right:10px;
}
.message image{
  width:40px;
  height:40px;
  /* background: #abcdef; */
}
.message .right{
  width:275px;
}
