  justify-content: center;
  align-items: center;
}
.money image{
  width:24rpx;
  height:16rpx;
  margin-left:3px;
}
/* 信息 */
.headImg{
  position: relative;
}
.news{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:10px;
  padding-right:10px;
}
.news .left{
  display: flex;
  align-items: center;
}
.news .left image{
  width:45px;
  height:45px;
  border-radius:50%;
}
.news .note{
  margin-left:15px;
}
.news .noteName{
  font-size:16px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(12,12,12,1);
  line-height:22px;
  width:160px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.news .describe{
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#484848;
  line-height:17px;
  margin-top:10px;
}
.news .right image{
  width:40rpx;
  height:34rpx;
 
}
/* 内容 */
.content{
  font-size:16px;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:#000;
