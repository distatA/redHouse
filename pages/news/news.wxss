/* pages/news/news.wxss */
.top{
  display: flex;
  align-items: center;
  padding:15px 40px;
  justify-content: space-between;
}
.top .li{position: relative;}
.top .li image{
  width:55px;
  height:55px;
  /* border-radius: 50%;
  background: #abcdef; */
  
}
.li .title{
  text-align: center;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.li .box{
  /* width:16px;
  display: inline-block; */
  padding:0 5px;
  height:16px;
  border-radius: 8px;
  background: #F9493D;
  text-align: center;
  line-height: 16px;
  font-size:10px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  position: absolute;
  right:0;
  top:0;
}
/* 列表 */
.list{
  position: relative;
  width: calc(100vw + 200rpx);
  padding-left: 20px;
  box-sizing: border-box;
  border-bottom:1px solid #F2F2F2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .left{
  display: flex;
  align-items: center;
} 
.list .left image{
  width:45px;
  height:45px;
  border-radius:50%;
  /* background: #abcdef; */
}
.list .left .titles{
  font-size:16px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(22,22,22,1);
  display: flex;
  align-items: center;
}
.nickName{
  margin-right:5px;
}
.nickNames{
  width:200px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.list .left .tip{
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(114,114,114,1);
  margin-top:5px;
}
.list .right{
  position: absolute;
  right: 250rpx;
  top: 50%;
  transform: translate(0,-50%);
  padding:0 5px;
  height:16px;
  border-radius: 8px;
  background: #F9493D;
  text-align: center;
  line-height: 16px;
  font-size:10px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  /* margin-left: 100rpx; */
}

.delete{
  width: 200rpx;
  height:150rpx;
  background-color: #F9493D;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}