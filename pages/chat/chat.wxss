/* pages/floor/onLineChat/onLineChat.wxss */
page{
  background:rgba(255,255,255,1);
  padding:0rpx;
}
.list {
  overflow:auto;
  margin:auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
.shenfen{
  width:100%;
  height:150rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 3rpx 4rpx 0rpx rgba(0, 0, 0, 0.05);
  display: flex;
  padding:23rpx 0 22rpx 41rpx;
  box-sizing: border-box;
  position: fixed;
  top:1rpx;
  left:0;
  z-index: 800;
}
.shenfen image{
  width:104rpx;
  height:105rpx;
  border-radius:50%;
  background: #abcdef;
}
.shenfen .right{
  padding:13rpx 0 18rpx 25rpx;
}
.shenfen .name{
  height:34rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(4,7,23,1);
  line-height:34rpx;
}
.shenfen .sex{
  height:29rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(88,88,88,1);
  line-height:29rpx;
  margin-top:11rpx;
}
.main{
 margin-top:180rpx;
}
.bg{
  width:100%;
  height:1px;
  background: #f6f7f7;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 800;
}
